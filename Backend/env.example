# ==============================================
# CoinVista Backend Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Prisma database connection URL
# For SQLite (development)
DATABASE_URL="file:./src/prisma/dev.db"

# For PostgreSQL (production)
# DATABASE_URL="postgresql://username:password@localhost:5432/coinvista"

# For MySQL (alternative)
# DATABASE_URL="mysql://username:password@localhost:3306/coinvista"

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Secret key for signing JWT tokens - CHANGE THIS!
# Generate a secure random string (minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT token expiration time (optional, defaults handled in code)
# JWT_EXPIRES_IN="7d"

# ==============================================
# EMAIL CONFIGURATION (for password reset)
# ==============================================
# Email address to send emails from
EMAIL_USER="your-email@gmail.com"

# Email password/app password
# For Gmail: Use App Password, not your regular password
# Enable 2FA first, then generate App Password
EMAIL_PASSWORD="your-app-password-here"

# Email service provider (gmail, yahoo, outlook, etc.)
# EMAIL_SERVICE="gmail"

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# Frontend URL for password reset links
# Development
FRONTEND_URL="http://localhost:3000"

# Production example
# FRONTEND_URL="https://your-domain.com"

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port number for the backend server
PORT="3001"

# Node environment
NODE_ENV="development"

# ==============================================
# API CONFIGURATION (optional)
# ==============================================
# CoinGecko API settings (if you plan to use external APIs)
# COINGECKO_API_URL="https://api.coingecko.com/api/v3"
# COINGECKO_API_KEY="your-api-key-here"

# Rate limiting (requests per minute)
# RATE_LIMIT_REQUESTS="100"
# RATE_LIMIT_WINDOW="15"

# ==============================================
# CORS CONFIGURATION (optional)
# ==============================================
# Allowed origins for CORS
# CORS_ORIGIN="http://localhost:3000,https://your-domain.com"

# ==============================================
# LOGGING & MONITORING (optional)
# ==============================================
# Log level (error, warn, info, debug)
# LOG_LEVEL="info"

# Sentry DSN for error tracking (optional)
# SENTRY_DSN="your-sentry-dsn-here"

# ==============================================
# REDIS CONFIGURATION (optional, for sessions/caching)
# ==============================================
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD="your-redis-password"

# ==============================================
# SECURITY SETTINGS (optional)
# ==============================================
# Password reset token expiration (in milliseconds)
# PASSWORD_RESET_EXPIRES="3600000"  # 1 hour

# Maximum login attempts before lockout
# MAX_LOGIN_ATTEMPTS="5"

# Account lockout duration (in milliseconds)
# LOCKOUT_TIME="900000"  # 15 minutes 