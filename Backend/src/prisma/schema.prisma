datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")  
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  watchlist Watchlist[]
}

model Watchlist {
  id      String @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  coinId  String
  @@unique([userId, coinId])
}
